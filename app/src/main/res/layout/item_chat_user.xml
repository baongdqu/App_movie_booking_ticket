<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- User message bubble - aligned to END (right) -->
    <TextView
        android:id="@+id/tvUserMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:padding="12dp"
        android:background="@drawable/bg_chat_user_bubble"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="280dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvUserTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserMessage"
        app:layout_constraintEnd_toEndOf="@id/tvUserMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
