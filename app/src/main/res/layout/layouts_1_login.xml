<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#121212"
    tools:context=".activities_1_login">

    <!-- ðŸŽ¥ Logo hoáº·c tÃªn á»©ng dá»¥ng -->
    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/imgLogo"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:layout_width="120dp"
        android:src="@drawable/ic_movie" />

    <!-- ðŸ§‘ Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        app:startIconDrawable="@drawable/ic_email">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”’ Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/m_t_kh_u"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_lock">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”˜ NÃºt Ä‘Äƒng nháº­p -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/ng_nh_p"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#E50914"
        android:textColor="#FFFFFF" />

    <!-- ðŸ”¹ QuÃªn máº­t kháº©u -->
    <TextView
        android:id="@+id/btntxtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qu_n_m_t_kh_u"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <!-- Gáº¡ch chia -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="20dp"
        android:background="#AAAAAA" />

    <!-- ðŸ§¾ NÃºt Ä‘Äƒng kÃ½ -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_o_t_i_kho_n_m_i"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF" />

</LinearLayout>
