<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background">

    <!-- ðŸ” MODERN TOOLBAR vá»›i gradient -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar_gradient"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Bot Avatar vá»›i glow effect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBotAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chatbot"/>
        </androidx.cardview.widget.CardView>

        <!-- Title & Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/cardBotAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardBotAvatar"
            app:layout_constraintBottom_toBottomOf="@id/cardBotAvatar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chatbot_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <!-- Online indicator dot -->
                <View
                    android:id="@+id/viewOnlineIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_online_dot"/>

                <TextView
                    android:id="@+id/tvBotStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/chatbot_online"
                    android:textColor="@color/netflix_green"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hidden toolbar for navigation -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarChatbot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ðŸ’¬ CHAT MESSAGES vá»›i fade top/bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChatMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/toolbarContainer"
        app:layout_constraintBottom_toTopOf="@id/layoutQuickReplies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- âš¡ QUICK REPLIES vá»›i style hiá»‡n Ä‘áº¡i -->
    <HorizontalScrollView
        android:id="@+id/layoutQuickReplies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="32dp"
        app:layout_constraintBottom_toTopOf="@id/layoutChatInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearQuickReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipSuggestMovie"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="@string/chip_suggest_movie"
                android:textColor="@color/chat_chip_text"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:cornerRadius="18dp"
                app:strokeColor="@color/chat_chip_stroke"
                app:strokeWidth="1.5dp"
                app:icon="@drawable/ic_movie_suggest"
                app:iconTint="@color/chat_chip_text"
                app:iconSize="16dp"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipBookTicket"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="@string/chip_book_ticket"
                android:textColor="@color/chat_chip_text"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:cornerRadius="18dp"
                app:strokeColor="@color/chat_chip_stroke"
                app:strokeWidth="1.5dp"
                app:icon="@drawable/ic_ticket"
                app:iconTint="@color/chat_chip_text"
                app:iconSize="16dp"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipShowtime"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:text="@string/chip_showtime"
                android:textColor="@color/chat_chip_text"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:cornerRadius="18dp"
                app:strokeColor="@color/chat_chip_stroke"
                app:strokeWidth="1.5dp"
                app:icon="@drawable/ic_schedule"
                app:iconTint="@color/chat_chip_text"
                app:iconSize="16dp"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chipTicketPrice"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/chip_ticket_price"
                android:textColor="@color/chat_chip_text"
                android:textSize="13sp"
                android:textAllCaps="false"
                app:cornerRadius="18dp"
                app:strokeColor="@color/chat_chip_stroke"
                app:strokeWidth="1.5dp"
                app:icon="@drawable/ic_price"
                app:iconTint="@color/chat_chip_text"
                app:iconSize="16dp"
                app:iconPadding="4dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- âŒ¨ï¸ MODERN INPUT AREA vá»›i bo gÃ³c phÃ­a trÃªn -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutChatInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input_area"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/inputChatMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_input"
            android:fontFamily="sans-serif"
            android:hint="@string/chat_input_hint"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="4"
            android:minHeight="48dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/chat_hint_text"
            android:textSize="15sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fabSendMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Modern Send Button vá»›i ripple effect -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:contentDescription="@string/send_message"
            app:fabSize="mini"
            app:fabCustomSize="48dp"
            app:backgroundTint="@color/chat_send_button"
            app:tint="@android:color/white"
            app:elevation="4dp"
            app:pressedTranslationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- â³ TYPING INDICATOR hiá»‡n Ä‘áº¡i vá»›i animation dots -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutTypingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/chat_bot_bubble"
        app:layout_constraintBottom_toTopOf="@id/layoutQuickReplies"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <ProgressBar
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:indeterminateTint="@color/chat_send_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chatbot_typing"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
