<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background">

    <!-- ðŸ” TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarChatbot"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/card_background"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/text_primary"
        app:titleTextColor="@color/text_primary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chatbot"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chatbot_title"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tvBotStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chatbot_online"
                    android:textColor="@color/netflix_green"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ðŸ’¬ CHAT MESSAGES RECYCLERVIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChatMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbarChatbot"
        app:layout_constraintBottom_toTopOf="@id/layoutQuickReplies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- âš¡ QUICK REPLIES (Gá»¢I Ã NHANH) -->
    <HorizontalScrollView
        android:id="@+id/layoutQuickReplies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/layoutChatInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupQuickReplies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSuggestMovie"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_suggest_movie"
                android:textColor="@color/chat_chip_text"
                app:chipStrokeColor="@color/chat_chip_stroke"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@android:color/transparent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBookTicket"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_book_ticket"
                android:textColor="@color/chat_chip_text"
                app:chipStrokeColor="@color/chat_chip_stroke"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@android:color/transparent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipShowtime"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_showtime"
                android:textColor="@color/chat_chip_text"
                app:chipStrokeColor="@color/chat_chip_stroke"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@android:color/transparent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTicketPrice"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_ticket_price"
                android:textColor="@color/chat_chip_text"
                app:chipStrokeColor="@color/chat_chip_stroke"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@android:color/transparent"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- âŒ¨ï¸ INPUT AREA -->
    <LinearLayout
        android:id="@+id/layoutChatInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/card_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/inputChatMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chat_input_hint"
            android:textColorHint="@color/chat_hint_text"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/bg_chat_input"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:maxLines="4"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="actionSend"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_send"
            android:contentDescription="@string/send_message"
            app:fabSize="mini"
            app:backgroundTint="@color/chat_send_button"
            app:tint="@android:color/white"
            app:elevation="4dp"/>

    </LinearLayout>

    <!-- â³ LOADING INDICATOR -->
    <LinearLayout
        android:id="@+id/layoutTypingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/bg_chat_bot_bubble"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/layoutQuickReplies"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateTint="@color/chat_send_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chatbot_typing"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
