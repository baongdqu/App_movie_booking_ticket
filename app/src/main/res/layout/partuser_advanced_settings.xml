<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt tài khoản"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp" />

        <!-- Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giao diện"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <Switch
            android:id="@+id/switchDarkMode"
            android:text="Chế độ tối"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangeLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_language"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical|start"
            android:backgroundTint="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp" 
            android:textAllCaps="false"/>



        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm thanh &amp; Thông báo"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <Switch
            android:id="@+id/switchSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bật/Tắt âm thanh"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/switchNotification"
            android:text="Bật thông báo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảo mật"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChangePassword"
            android:text="Đổi mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/netflix_red"
            android:textColor="@color/netflix_text_white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:cornerRadius="4dp"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAccount"
            android:text="Xóa tài khoản"
            android:backgroundTint="@color/button_red_dark"
            android:textColor="@color/netflix_text_white"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:cornerRadius="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginVertical="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackSettings"
            android:text="Quay lại"
            android:backgroundTint="@color/card_background"
            android:textColor="@color/text_primary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:cornerRadius="4dp"
            app:strokeColor="@color/divider_color"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
