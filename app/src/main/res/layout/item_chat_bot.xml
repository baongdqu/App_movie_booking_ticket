<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- Bot avatar -->
    <ImageView
        android:id="@+id/imgBotAvatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_chatbot"
        app:layout_constraintTop_toTopOf="@id/tvBotMessage"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Bot message bubble - aligned to START (left) -->
    <TextView
        android:id="@+id/tvBotMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_bot_bubble"
        android:textColor="@color/chat_bot_text"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBotAvatar"
        app:layout_constraintWidth_max="280dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvBotTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvBotMessage"
        app:layout_constraintStart_toStartOf="@id/tvBotMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
