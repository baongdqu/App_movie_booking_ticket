<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- âœ¨ Profile Info Card (Netflix Style) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center_horizontal">

                    <!-- Avatar with Netflix Red Border -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/ic_person"
                            app:civ_border_width="4dp"
                            app:civ_border_color="@color/profile_accent" />
                    </FrameLayout>

                    <!-- Username -->
                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="24dp"
                        android:textColor="@color/text_primary" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_email"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸŽ¨ Action Buttons Section -->

            <!-- Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/ch_nh_s_a_th_ng_tin"
                android:textColor="@color/netflix_text_white"
                android:backgroundTint="@color/netflix_red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_person"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/netflix_text_white"
                android:layout_marginBottom="16dp" />

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/advanced_settings"
                android:textColor="@color/netflix_text_white"
                android:backgroundTint="@color/netflix_medium_gray"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/netflix_text_white"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/netflix_medium_gray"
                android:layout_marginVertical="16dp" />

            <!-- Logout Button (Destructive Action) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/ng_xu_t"
                android:textColor="@color/netflix_text_white"
                android:backgroundTint="@color/netflix_dark_gray"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                app:cornerRadius="4dp"
                app:strokeColor="@color/netflix_medium_gray"
                app:strokeWidth="1dp"
                android:layout_marginBottom="40dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
