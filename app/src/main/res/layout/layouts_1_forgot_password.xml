<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#121212"
    tools:context=".activities_1_forgot_password">

    <!-- ðŸŽ¬ Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_movie"
        android:contentDescription="@string/app_name" />

    <!-- ðŸ“§ Nháº­p email Ä‘á»ƒ khÃ´i phá»¥c -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        app:startIconDrawable="@drawable/ic_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmailForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ðŸ”˜ NÃºt khÃ´i phá»¥c máº­t kháº©u -->
    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/g_i_li_n_k_t_kh_i_ph_c"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:backgroundTint="#E50914"
        android:textColor="#FFFFFF" />

    <!-- ðŸ”™ Quay láº¡i Ä‘Äƒng nháº­p -->
    <TextView
        android:id="@+id/txtBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quay_l_i_ng_nh_ps"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
