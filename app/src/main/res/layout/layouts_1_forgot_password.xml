<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/layout_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal"
        tools:context=".activities_1_forgot_password">

        <!-- Spacer top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="40dp" />

        <!-- ðŸŽ¬ Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_movie"
            android:contentDescription="@string/app_name" />

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuÃªn máº­t kháº©u?"
            android:textColor="@color/netflix_text_white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Instruction Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nháº­p email Ä‘Ã£ Ä‘Äƒng kÃ½ cá»§a báº¡n vÃ  chÃºng tÃ´i sáº½ gá»­i liÃªn káº¿t khÃ´i phá»¥c máº­t kháº©u."
            android:textColor="@color/netflix_text_gray"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="32dp" />

        <!-- ðŸ“§ Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            app:hintTextColor="@color/netflix_text_gray"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/netflix_dark_gray"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmailForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/netflix_text_white"
                android:textColorHint="@color/netflix_text_gray"
                android:textSize="16sp"
                android:paddingVertical="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ”˜ Reset Password Button -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/g_i_li_n_k_t_kh_i_ph_c"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_netflix_button"
            android:textColor="@color/netflix_text_white" />

        <!-- Spacer middle -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="32dp" />

        <!-- ðŸ”™ Back to Login Link -->
        <TextView
            android:id="@+id/txtBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quay_l_i_ng_nh_ps"
            android:textColor="@color/netflix_text_gray"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
