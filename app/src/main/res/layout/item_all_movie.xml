<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_item_movie"
    android:padding="8dp"
    android:layout_marginVertical="6dp">

    <!-- Ảnh phim -->
    <ImageView
        android:id="@+id/imgMovie"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_poster"
        android:background="@drawable/rounded_corners" />

    <!-- Thông tin phim -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Phim"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMovieGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Thể Loại"
            android:textColor="#555"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvMovieTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 giờ 41 phút"
            android:textColor="#555"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvMovieDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31/10/2025"
            android:textColor="#777"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Hai nút dưới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết"
                android:textSize="13sp"
                android:textColor="#000"
                android:backgroundTint="#E0E0E0" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#E0E0E0"
                android:text="Mua vé"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

