<?xml version="1.0" encoding="utf-8"?>
<!--
    partuser_movie_preferences.xml
    Màn hình sở thích phim của người dùng (Netflix Style)
    - Thể loại phim yêu thích
    - Ngôn ngữ phim yêu thích
    - Phim lồng tiếng hay phụ đề
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- ========================= -->
        <!-- HEADER SECTION -->
        <!-- ========================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_arrow"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/movie_preferences_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- ========================= -->
        <!-- MOVIE ICON HEADER -->
        <!-- ========================= -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_movie"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_preferences_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- ========================= -->
        <!-- THỂ LOẠI PHIM YÊU THÍCH -->
        <!-- ========================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_genre"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_genre"
                    app:hintTextColor="@color/text_secondary"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_color"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconDrawable="@drawable/ic_arrow_back_"
                    app:endIconMode="custom"
                    app:endIconTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="15sp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================= -->
        <!-- NGÔN NGỮ PHIM YÊU THÍCH -->
        <!-- ========================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_movie_language"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMovieLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_movie_language"
                    app:hintTextColor="@color/text_secondary"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/bg_color"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconDrawable="@drawable/ic_arrow_back_"
                    app:endIconMode="custom"
                    app:endIconTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputMovieLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="15sp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================= -->
        <!-- LỒNG TIẾNG HAY PHỤ ĐỀ -->
        <!-- ========================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitle_preference"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/radioGroupSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioDubbed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dubbed"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:buttonTint="@color/netflix_red" />

                    <RadioButton
                        android:id="@+id/radioSubtitled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitled"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:buttonTint="@color/netflix_red" />

                    <RadioButton
                        android:id="@+id/radioBoth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/both_dubbed_subtitled"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:buttonTint="@color/netflix_red" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================= -->
        <!-- NÚT LƯU -->
        <!-- ========================= -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePreferences"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save"
            android:textColor="@color/netflix_text_white"
            android:backgroundTint="@color/netflix_red"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:cornerRadius="4dp"
            android:layout_marginBottom="12dp" />

        <!-- ========================= -->
        <!-- NÚT HỦY -->
        <!-- ========================= -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelPreferences"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/cancel"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/card_background"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:cornerRadius="4dp"
            app:strokeColor="@color/divider_color"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
