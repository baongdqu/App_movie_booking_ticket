<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- TOOLBAR với Gradient -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/card_background"
        android:elevation="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackPay"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/text_primary"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/payment_info_title"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="18sp"/>

        <!-- Icon bảo mật -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_lock"
            app:tint="@color/netflix_green"
            android:contentDescription="@string/secure_payment" />
    </RelativeLayout>

    <!-- NỘI DUNG CUỘN -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECTION: Thông tin vé -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_info"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"/>

            <!-- CARD: Thông tin đặt vé -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Hàng 1: Poster + Thông tin phim -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Poster với bo góc -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:id="@+id/imagePoster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/movie_poster"/>
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="4dp">

                            <!-- Badge rạp -->
                            <TextView
                                android:id="@+id/txtCinemaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cinema_label_icon"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:background="@drawable/bg_badge_outline"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"/>

                            <!-- Tên phim -->
                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Movie name"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:paddingTop="8dp"/>

                            <!-- Nhãn tuổi + thể loại -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="8dp"
                                android:gravity="center_vertical">

                                <!-- Badge tuổi -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="2dp"
                                    tools:text="16+"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/bg_age_badge"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="8dp"
                                    tools:text="Hành động, Phiêu lưu"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <!-- Định dạng chiếu -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/txtFormat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="4dp"
                                    tools:text="2D Phụ đề"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/netflix_red"
                                    android:background="@drawable/bg_format_badge"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider với hiệu ứng ticket -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="-28dp"
                            android:background="@drawable/bg_ticket_notch_left"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/dashed_line"
                            android:layerType="software"/>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="-28dp"
                            android:background="@drawable/bg_ticket_notch_right"/>
                    </LinearLayout>

                    <!-- GRID 2x2: Thời gian – Phòng – Ghế -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Cột trái -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Thời gian -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="16dp">

                                <TextView
                                    android:text="@string/schedule_label"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/txtTime"
                                    tools:text="Thứ 6, 21/11/2025\n11:45 → 13:28"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:lineSpacingExtra="2dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="4dp"/>
                            </LinearLayout>

                            <!-- Phòng chiếu -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:text="@string/screen_label"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/txtRoom"
                                    tools:text="RAP 5"
                                    android:textColor="@color/netflix_red"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Cột phải -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <!-- Số ghế -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:text="@string/seat_label_icon"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtSeat"
                                    tools:text="H09, H10"
                                    android:textColor="@color/netflix_green"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:paddingTop="4dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: Thông tin người nhận -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient_info"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"/>

            <!-- CARD: Người nhận -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tên -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/netflix_red"/>

                        <TextView
                            android:id="@+id/txtUser"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:paddingStart="12dp"
                            tools:text="User name" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginStart="32dp"/>

                    <!-- Điện thoại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/netflix_green"/>

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:paddingStart="12dp"
                            tools:text="Phone number" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginStart="32dp"/>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/accent_blue"/>

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:paddingStart="12dp"
                            tools:text="mail@example.com" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: Phương thức thanh toán -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:paddingBottom="12dp"/>

            <!-- CARD: VNPay -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_vnpay"
                        android:scaleType="fitCenter"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_vnpay_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_vnpay_desc_text"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbVnpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/netflix_red"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD: Số dư -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_wallet"
                        android:scaleType="fitCenter"
                        app:tint="@color/netflix_green"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_balance_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/txtBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Số dư: 500.000đ"
                            android:textSize="12sp"
                            android:textColor="@color/netflix_green"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/netflix_red"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- THANH THANH TOÁN DƯỚI CÙNG -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- TỔNG TIỀN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_payment"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="85.000đ"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/netflix_red"/>
            </LinearLayout>

            <!-- NÚT THANH TOÁN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="160dp"
                android:layout_height="52dp"
                android:text="@string/pay_now"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/netflix_red"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_payment"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
