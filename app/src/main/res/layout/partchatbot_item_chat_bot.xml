<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    android:paddingStart="4dp"
    android:paddingEnd="48dp">

    <!-- Bot avatar trong card với shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBotAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/cardBotMessage"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgBotAvatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_chatbot"/>

    </androidx.cardview.widget.CardView>

    <!-- Bot message bubble với shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardBotAvatar"
        app:layout_constraintWidth_max="300dp">

        <TextView
            android:id="@+id/tvBotMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@drawable/bg_chat_bot_bubble"
            android:textColor="@color/chat_bot_text"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="sans-serif"/>

    </androidx.cardview.widget.CardView>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvBotTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardBotMessage"
        app:layout_constraintStart_toStartOf="@id/cardBotMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
