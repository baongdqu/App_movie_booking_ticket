<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt tài khoản"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

        <Switch
            android:id="@+id/switchDarkMode"
            android:text="Chế độ tối"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="20dp" />

        <!-- === Switch Bật/Tắt âm thanh === -->
        <Switch
            android:id="@+id/switchSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bật/Tắt âm thanh"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="20dp" />

        <Switch
            android:id="@+id/switchNotification"
            android:text="Bật thông báo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/btnChangePassword"
            android:text="Đổi mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_red"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="3dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnDeleteAccount"
            android:text="Xóa tài khoản"
            android:backgroundTint="@color/button_red_dark"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:elevation="3dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnBackSettings"
            android:text="Quay lại"
            android:backgroundTint="@color/button_red_dark"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:elevation="3dp"
            android:layout_marginBottom="40dp" />
    </LinearLayout>
</ScrollView>
